{
  "name": "micro-frontends",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "npm run start:all",
    "start:all": "concurrently \"npm run start:host\" \"npm run start:react-child\" \"npm run start:vue-child\"",
    "start:host": "ng serve host --port 4200",
    "start:react-child": "webpack serve --config projects/react-child/webpack.config.js",
    "start:vue-child": "webpack serve --config projects/vue-child/webpack.config.js",
    "build": "npm run build:react && npm run build:vue",
    "build:react": "webpack --config projects/react-child/webpack.config.js --mode production",
    "build:vue": "webpack --config projects/vue-child/webpack.config.js --mode production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.0",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@softarc/native-federation-node": "^3.3.4",
    "es-module-shims": "^1.5.12",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "vue": "^3.5.24",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-architects/module-federation": "^20.0.0",
    "@angular-architects/module-federation-tools": "^20.0.0",
    "@angular-architects/native-federation": "^20.1.7",
    "@angular-builders/custom-webpack": "^19.0.1",
    "@angular-devkit/build-angular": "^19.2.19",
    "@angular/cli": "^19.2.19",
    "@angular/compiler-cli": "^19.2.0",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@types/jasmine": "~5.1.0",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@vue/compiler-sfc": "^3.5.24",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.5",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "style-loader": "^4.0.0",
    "typescript": "~5.7.2",
    "vue-loader": "^17.4.2",
    "vue-template-compiler": "^2.7.16",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
